@model FlightReservationSystem_v1.Models.Booking

@{
    ViewData["Title"] = "Book Flight";
}

<h2>Book Flight</h2>

<form asp-action="BookFlight" method="post">
    <input type="hidden" asp-for="FlightId" value="@ViewBag.FlightId" />

    <div class="form-group">
        <label asp-for="UserId"></label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users"></select>
    </div>

    <div class="form-group">
        <label asp-for="PassengerCount"></label>
        <input asp-for="PassengerCount" class="form-control" />
        <span asp-validation-for="PassengerCount" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-success">Confirm Booking</button>
</form>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to Booking List</a>
</div>
