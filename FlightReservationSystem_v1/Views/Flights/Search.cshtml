@{
    ViewData["Title"] = "Search Flights";
}

<h2>Search Flights</h2>

<form asp-action="Search" method="get" class="mb-4">
    <div class="form-group">
        <input type="text" class="form-control" name="source" placeholder="Source City" required />
    </div>
    <div class="form-group">
        <input type="text" class="form-control" name="destination" placeholder="Destination City" required />
    </div>
    <div class="form-group">
        <input type="date" class="form-control" name="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" required />
    </div>
    <button type="submit" class="btn btn-primary">Search Flights</button>
</form>
