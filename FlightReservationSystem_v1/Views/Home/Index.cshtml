@{
    ViewData["Title"] = "Home";
}

<div class="text-center my-5">
    <h1 class="display-4">Welcome to the Flight Reservation System</h1>
    <p class="lead">Book your flights easily and conveniently.</p>
    <a href="@Url.Action("Search", "Flights")" class="btn btn-primary btn-lg">Start Searching</a>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Why Choose Us?</h5>
                <p class="card-text">We offer the best flight options, competitive prices, and an easy booking process.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">24/7 Support</h5>
                <p class="card-text">Our support team is available 24/7 to assist you with your booking needs.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Secure Transactions</h5>
                <p class="card-text">We ensure that your data is protected and transactions are secure.</p>
            </div>
        </div>
    </div>
</div>
